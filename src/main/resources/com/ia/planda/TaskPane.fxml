<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="taskAnchor" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.ia.planda.TaskPane">
   <children>
      <TitledPane fx:id="taskPane" wrapText="true">
         <content>
            <AnchorPane minWidth="0.0" prefWidth="300.0">
               <children>
                  <VBox prefWidth="297.0" spacing="3.0">
                     <children>
                        <FlowPane hgap="3.0" vgap="3.0">
                           <children>
                              <TextField fx:id="taskNameText" prefHeight="25.0" prefWidth="179.0" promptText="Task name" />
                              <DatePicker fx:id="datePicker" prefHeight="25.0" prefWidth="106.0" promptText="Due date" />
                              <Label text="Estimated time requirement: " />
                              <TextField prefHeight="25.0" prefWidth="131.0" promptText="time in minutes" />
                              <Label text="Goal time per day: " />
                              <TextField prefHeight="25.0" prefWidth="184.0" promptText="time in minutes" />
                           </children>
                        </FlowPane>
                        <TextArea fx:id="taskDetailsText" prefHeight="130.0" prefWidth="277.0" promptText="Task details" wrapText="true" />
                        <ButtonBar fx:id="taskButtonBar" buttonMinWidth="50.0" buttonOrder="" prefWidth="300.0">
                           <buttons>
                              <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteButtonClicked" text="Delete" />
                              <Button fx:id="Complete" mnemonicParsing="false" onAction="#onCompleteButtonClicked" text="Complete" />
                           </buttons>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <padding>
                              <Insets left="5.0" right="5.0" />
                           </padding>
                        </ButtonBar>
                     </children>
                     <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </padding>
                  </VBox>
               </children>
               <padding>
                  <Insets top="1.0" />
               </padding>
            </AnchorPane>
         </content>
      </TitledPane>
   </children>
</AnchorPane>
